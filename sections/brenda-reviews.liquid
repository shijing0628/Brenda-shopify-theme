<div class="section7">
  <div class="container">
      <div class="section7-col-1">
        <h2 class="section7-title">{{section.settings.title}}</h2>
      </div>
        <div class="section7-col-2 section7-discription">{{section.settings.discription}}</div>
        <div class="section7-items">
            {% for block in section.blocks %}   
            <div class="section7-col-3">    
                    <img class="section7-stars" src="{{block.settings.image_2 | img_url:'medium'}}">
                    <div class="section7-name-stars">
                      <h5  class="section7-name">{{block.settings.review_name}}</h5>
                       <img class="section7-image" src="{{block.settings.image_1 | img_url:'100x100', crop: 'center'}}">
                    </div>
                <div class="section7-des">{{block.settings.title}}</div>
            </div>
            {% endfor %}
        </div>
  </div>
</div>


